<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#F0F0F0"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard"
                        android:text="AI와 함께하는 생활"
                        android:textSize="35dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/layout_goal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@drawable/roundstyle10dp"
                    android:backgroundTint="@color/white"
                    android:elevation="50dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard"
                            android:text="일일 차트"
                            android:textColor="#212529"
                            android:textSize="18sp"/>
                </LinearLayout>

                <com.example.admin_app.chart.RoundedBarChart
                        android:id="@+id/chart"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:layout_marginRight="10dp"
                        app:radius="20dp"
                        android:backgroundTint="@color/white"
                        tools:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundstyle10dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:elevation="50dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주간차트"
                        android:fontFamily="@font/pretendard"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                <com.example.admin_app.chart.RoundedBarChart
                        android:id="@+id/week_chart"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:layout_marginRight="10dp"
                        app:radius="20dp"
                        android:backgroundTint="@color/white"
                        tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:background="@drawable/roundstyle10dp"
                    android:backgroundTint="#fff">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/omnigodic"
                        android:text="통제하기"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/omnigodic"
                        android:text="시간 설정"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/b_work_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/omnigodic"
                        android:text="독후감 설정"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                <Button
                        android:id="@+id/change_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/omnigodic"
                        android:text="변경하기"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:textSize="17sp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/roundstyle10dp"
                android:backgroundTint="@color/white">
            <ScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/mod_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard"
                            android:lineSpacingMultiplier="1.5"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/scrollTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard"
                            android:lineSpacingMultiplier="1.5"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>